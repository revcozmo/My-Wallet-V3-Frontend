.flex-row.flex-column-tablet(ng-if="onStep('address') || onStep('info')")
  .width-40
    .width-80
      h4.f-20.em-500.mvn.mb-10(translate="Verify Identity")
      .mbl.hidden-xs
        span.f-16(translate="As part of your registration, Unocoin will need to collect some personal information to verify your identify. Strong verification procedures are required by federal law to reduce fraud and money laundering activities.")
      .mbl
        span.f-16(translate="This information will only be sent to Unocoin and will not be directly linked to your Blockchain wallet.")
      .mbl(ng-show="buySellDebug")
        div.type-h4.mbs.underline
          i.mrs.ti-search
          span QA
        ul.pll
          li.type-lbl.mbm.pointer.blue(ng-click="unocoinAddressForm()") Autofill Address Form
  .width-60
    form.bc-form(ng-if="onStep('address')" name="addressForm" ng-submit="setAddress()" novalidate autocomplete="off")
      fieldset(ng-disabled="locked")
        .row
          .col-md-12
            .mb-20.pos-rel
              label Full Name
              input(ng-model="state.fullName" name="fullName" required)
              span.error(translate="Required field")
        .row
          .col-md-6
            .mb-20.pos-rel
              label Street
              input(ng-model="state.street" name="street" placeholder="Street address" required)
              span.error(translate="Required field")
          .col-md-6
            .mb-20.pos-rel
              label City
              input(ng-model="state.city" name="city" required)
              span.error(translate="Required field")
        .row
          .col-md-6
            .mb-20.pos-rel
              label State
              input(ng-model="state.state" name="state" required)
              span.error(translate="Required field")
          .col-md-6
            .mb-20.pos-rel
              label Pin Code
              input(ng-model="state.zipcode" name="zipcode" format-input="xxxxx" required)
              span.error(translate="Required field")
        .row
          .col-md-12
            button.btn.button-primary.full(type="submit" ng-disabled="addressForm.$invalid") Continue
    form.bc-form(ng-if="onStep('info')" name="infoForm" ng-submit="setAddress()" novalidate autocomplete="off")
      fieldset(ng-disabled="locked")
        .row
          .col-md-6
            .mb-20.pos-rel
              label Mobile
              input(ng-model="state.mobile" name="mobile" required)
              span.error(translate="Required field")
          .col-md-6
            .mb-20.pos-rel
              label PAN Card
              input(ng-model="state.pancard" name="PAN Card" placeholder="PAN Card" required)
              span.error(translate="Required field")
        .row
          .col-md-6
            .mb-20.pos-rel
              label Bank Account Number
              input(ng-model="state.bankAccountNumber" name="Bank Account Number" required)
              span.error(translate="Required field")
          .col-md-6
            .mb-20.pos-rel
              label IFSC
              input(ng-model="state.ifsc" name="ifsc" required)
              span.error(translate="Required field")
        .row
          .col-md-12
            button.btn.button-primary.full(type="submit" ng-disabled="infoForm.$invalid") Continue
.flex-row.flex-start.flex-column-tablet(ng-if="onStep('photos')")
  .width-40
    .width-80
      .flex-row.flex-center.mb-10
        h4.f-20.em-500.mvn(translate="{{state.idType + '_ID'}}.TITLE")
        button.helper(ng-click="openHelper(state.idType + '-id-helper')" type="button" tabindex="-1")
          span ?
      .mbl
        span.f-16(translate="{{state.idType + '_ID'}}.COPY")
      ul.mbl.pln.pl-20.f-16
        li.pb-5
          span(translate="{{state.idType + '_ID'}}.OPTION1")
        li.pb-5
          span(translate="{{state.idType + '_ID'}}.OPTION2")
        li.pb-5
          span(translate="{{state.idType + '_ID'}}.OPTION3")
        li.pb-5
          span(translate="{{state.idType + '_ID'}}.OPTION4")
      .mbl
        span.f-16(translate="{{state.idType + '_ID'}}.COPY_2" ng-show="state.idType === 'id'")
      .mbl(ng-show="buySellDebug")
        div.type-h4.mbs.underline
          i.mrs.ti-search
          span QA
        .flex-row.flex-center.lh1
          input.mrs(type="checkbox" id="verify-doc" ng-model="state.verifyDoc")
          label.em-400.type-lbl.mls(for="verify-doc") Check this box if you want this doc to be approved right away.

  .width-60
    bc-file-upload(file="state.file" id-type="state.idType" on-upload="prepUpload" locked="locked")
